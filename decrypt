key = bytes(key, encoding="utf-8")
print(key)'''
k = pyDes.des(b"DESCRYPT", pyDes.CBC, b"\0\0\0\0\0\0\0\0", pad=None, padmode=pyDes.PAD_PKCS5)
d = k.encrypt(data)

e = k.decrypt(key)
print(bytes.decode(e))
print("解密后的信息: %r" % k.decrypt(key))
