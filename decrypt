import pyDes
data = b"hello"

key = b'1\x8e1\xcf\xf2\x0fV\xaa'
'''txt = input("请输入需要解密的文本:")
txt = bytes(txt, encoding="utf-8")
print(type(txt))
print(txt)
#txt = bytes(txt, encoding="utf8")
print(txt)
key = input("请输入8位秘钥:")
